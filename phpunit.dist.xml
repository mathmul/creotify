<?xml version="1.0" encoding="UTF-8"?>

<!-- https://phpunit.readthedocs.io/en/latest/configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         colors="true"
         failOnDeprecation="true"
         failOnNotice="true"
         failOnWarning="true"
         bootstrap="tests/bootstrap.php"
         cacheDirectory=".phpunit.cache"
         stopOnFailure="true"
>

    <!-- ───── Environment ───── -->
    <php>
        <ini name="memory_limit" value="512M"/>
        <ini name="error_reporting" value="-1"/>
        <env name="APP_ENV" value="test"/>
        <server name="SHELL_VERBOSITY" value="-1"/>
        <env name="KERNEL_CLASS" value="App\Kernel"/>

        <env name="MAILER_DSN" value="null://null"/>
        <env name="MESSENGER_TRANSPORT_DSN" value="sync://"/>
        <env name="SYMFONY_DEPRECATIONS_HELPER" value="disabled"/>

    </php>

    <!-- ───── Test Suites ───── -->
    <testsuites>
        <testsuite name="Smoke">
            <directory>tests/Smoke</directory>
        </testsuite>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
        <testsuite name="Integration">
            <directory>tests/Integration</directory>
        </testsuite>
    </testsuites>

    <!-- ───── Code Sources ───── -->
    <source>
        <include>
            <directory>src</directory>
        </include>
        <exclude>
            <directory>src/DataFixtures</directory>
            <directory suffix="Exception.php">src/</directory>
        </exclude>
    </source>

    <!-- ───── Logging & Coverage ───── -->
    <logging>
        <junit outputFile="var/log/junit.xml"/>
    </logging>
    <coverage includeUncoveredFiles="true" pathCoverage="false">
        <report>
            <clover outputFile="var/coverage/coverage.xml"/>
            <html outputDirectory="var/coverage/html"/>
            <text outputFile="var/coverage/summary.txt" showOnlySummary="true"/>
        </report>
    </coverage>
</phpunit>
