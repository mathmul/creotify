{% extends 'base.html.twig' %}

{% block title %}Orders for {{ phoneNumber }}{% endblock %}

{% block body %}
<h1>Orders for {{ phoneNumber }}</h1>

{% if orders is empty %}
    <p>No orders found.</p>
{% else %}
    <table border="1" cellpadding="6">
        <tr>
            <th>Order #</th><th>Status</th><th>Total</th><th>Created</th>
        </tr>
        {% for o in orders %}
            <tr>
                <td>{{ o.orderNumber }}</td>
                <td>{{ o.status }}</td>
                <td>{{ o.totalPrice }} €</td>
                <td>{{ o.createdAt }}</td>
            </tr>
        {% endfor %}
    </table>
{% endif %}

<a href="{{ path('web_demo_index') }}">← Back</a>
{% endblock %}
